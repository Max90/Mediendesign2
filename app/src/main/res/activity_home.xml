<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:id="@+id/layouthome"
    android:background="@color/blueBackground"
    android:orientation="horizontal" >

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <HorizontalScrollView
            android:id="@+id/horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:context=".HomeActivity"
                    tools:ignore="MergeRootFrame"
                    android:paddingBottom="50dp">

                    <ImageButton
                        android:id="@+id/profileButton"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="100dp"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/listen"
                        android:text="@string/profile_button_string"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/profileButton"
                        android:layout_alignRight="@+id/profileButton"
                        android:layout_below="@+id/profileButton"
                        android:gravity="center"
                        android:text="Profil"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/playButton"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="100dp"
                        android:layout_toRightOf="@+id/profileButton"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/play"
                        android:text="@string/wiedergabe_button_string"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/playButton"
                        android:layout_alignRight="@+id/playButton"
                        android:layout_below="@+id/profileButton"
                        android:gravity="center"
                        android:text="Wiedergabe"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/settingButton"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="100dp"
                        android:layout_toRightOf="@+id/playButton"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/settings"
                        android:text="@string/einstellungen_button_string"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/settingButton"
                        android:layout_alignRight="@+id/settingButton"
                        android:layout_below="@+id/profileButton"
                        android:layout_marginLeft="-15px"
                        android:layout_marginRight="-15px"
                        android:gravity="center"
                        android:text="Einstellungen"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/soundButton"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginRight="100dp" 
                        android:layout_toRightOf="@+id/settingButton"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/notes"
                        android:text="@string/sound_button_string"
                        android:visibility="visible"
                        />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/soundButton"
                        android:layout_alignRight="@+id/soundButton"
                        android:layout_below="@+id/profileButton"
                        android:gravity="center"
                        android:text="Sound"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/friendButton"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_below="@+id/profileButton"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="100dp"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/friends"
                        android:text="@string/freunde_button_string"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/friendButton"
                        android:layout_alignRight="@+id/friendButton"
                        android:layout_below="@+id/friendButton"
                        android:gravity="center"
                        android:text="Freunde"
                        android:textSize="20sp"
                        android:layout_marginBottom="50dp" />

                    <ImageButton
                        android:id="@+id/deviceButton"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_below="@+id/playButton"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="100dp"
                        android:layout_toRightOf="@+id/friendButton"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/devices"
                        android:text="@string/geraete_button_string"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/deviceButton"
                        android:layout_alignRight="@+id/deviceButton"
                        android:layout_below="@+id/friendButton"
                        android:gravity="center"
                        android:text="GerÃ¤te"
                        android:textSize="20sp"
                        android:layout_marginBottom="50dp" />

                    <ImageButton
                        android:id="@+id/shazamButton"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_below="@+id/playButton"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="100dp"
                        android:layout_toRightOf="@+id/deviceButton"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/shazam"
                        android:text="@string/shazam_button_string"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/shazamButton"
                        android:layout_alignRight="@+id/shazamButton"
                        android:layout_below="@+id/friendButton"
                        android:gravity="center"
                        android:text="Shazam"
                        android:textSize="20sp"
                        android:layout_marginBottom="50dp" />
                    
   
                </RelativeLayout>
                
        </HorizontalScrollView>
    </ScrollView>
                 <RelativeLayout
    android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    >

    <wir.diebesten.de.ScrollingTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
        android:id="@+id/tickertext"
        android:text="@string/test"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:background="@color/blueGrey"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:singleLine="true"
        android:drawableRight="@drawable/coverellie"
        android:drawablePadding="1dp"
         />
    </RelativeLayout></RelativeLayout>